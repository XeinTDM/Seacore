<UserControl x:Class="Seacore.Resources.Usercontrols.Server" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Seacore.Resources.Usercontrols"
             xmlns:class="clr-namespace:Seacore.Resources.Usercontrols.Servers"
             mc:Ignorable="d"
             d:DesignHeight="506" d:DesignWidth="868">
    <UserControl.Resources>
        <class:StatusToActionConverter x:Key="StatusToActionConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="0,0,0,65">
            <TextBlock Text="Server" FontSize="18" Foreground="#fff" Margin="54,-35,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ListView x:Name="serverListView" Background="Transparent" BorderThickness="0">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Edit Name" Click="OnEditNameMenuClick"/>
                        <MenuItem Header="Edit Port" Click="OnEditPortMenuClick"/>
                        <MenuItem x:Name="menuItemListenInactive" Click="OnToggleListenInactiveMenuClick" Header="{Binding SelectedItem.Status, Converter={StaticResource StatusToActionConverter}, ElementName=serverListView}"/>
                        <MenuItem Header="Delete" Click="OnDeleteMenuClick"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource BaseHeaderStyle}">
                                <Setter Property="Height" Value="38"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <GridViewColumn Header="Name" Width="217" DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style BasedOn="{StaticResource BaseHeaderStyle}" TargetType="GridViewColumnHeader">
                                    <Setter Property="Margin" Value="-3,0,0,0"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>

                        <GridViewColumn Header="Port" Width="217" DisplayMemberBinding="{Binding Port}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Port}" Foreground="White" FontSize="15"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Status" Width="217" DisplayMemberBinding="{Binding Status}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" Background="Transparent" Foreground="White" FontSize="15"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Uptime" Width="217">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Uptime, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" Foreground="White" FontSize="15"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="bg" Background="Transparent" Height="34" HorizontalAlignment="Stretch">
                                        <Grid>
                                            <Border x:Name="hoverIndicator" Background="#4B4990" Opacity="0"/>
                                            <Border x:Name="focusIndicator" Background="#4B4990" Opacity="0"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="200"/>
                                                </Grid.ColumnDefinitions>

                                                <!--Name-->
                                                <TextBlock x:Name="TBlockName" Text="{Binding Name}" FontSize="14" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center" />

                                                <!--Port-->
                                                <TextBlock Text="{Binding Port}" FontSize="14" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" />

                                                <!--Status-->
                                                <TextBlock x:Name="TBlockStatus" Text="{Binding Status}" FontSize="14" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" />

                                                <!--Uptime-->
                                                <TextBlock x:Name="TBlockUptime" Text="{Binding Uptime}" FontSize="14" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3" />
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsFocused" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="hoverIndicator"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0.1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.EnterActions>
                                            <MultiTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="hoverIndicator"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.ExitActions>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsFocused" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="focusIndicator"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0.2" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.EnterActions>
                                            <MultiTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="focusIndicator"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiTrigger.ExitActions>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,16,16">
            <TextBlock Text="Port:" FontFamily="Inter" FontSize="15" VerticalAlignment="Center" Foreground="#fff"/>
            <TextBox x:Name="portInput" Width="94" Height="30" FontFamily="Inter" TextAlignment="Center" FontSize="14" Margin="12,0,12,0" 
                     Style="{StaticResource portInput}" PreviewTextInput="PortInput_PreviewTextInput" LostFocus="PortInput_LostFocus"/>
            <Button x:Name="StartAddListeningBTN" Style="{StaticResource startListening}" Click="OnStartListeningButtonClick"/>
        </StackPanel>
    </Grid>
</UserControl>