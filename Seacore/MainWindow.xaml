<Window x:Class="Seacore.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Seacore" mc:Ignorable="d"
        UseLayoutRounding="True" TextOptions.TextFormattingMode="Display" Height="550" Width="950" Background="Transparent" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True">

    <Border CornerRadius="5">
        <Border.Background>
            <SolidColorBrush Color="#CC1B1B1B"/>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="82"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--//Side panel//-->
            <Border CornerRadius="5,0,0,5" Background="#CC1A1A1A" BorderThickness="0,0,1,0" BorderBrush="#CC1F1F1F">
                <Grid>
                    <StackPanel Margin="0,75,0,0">
                        <ToggleButton Style="{StaticResource MenuNavTBTN}" x:Name="btnDashboard" Cursor="Hand"/>
                        <ToggleButton Style="{StaticResource ClientNavTBTN}" x:Name="btnClient" Margin="0,15,0,15" Cursor="Hand"/>
                        <ToggleButton Style="{StaticResource ServerNavTBTN}" x:Name="btnServer" Cursor="Hand"/>
                        <ToggleButton Style="{StaticResource PluginsNavTBTN}" x:Name="btnPlugins" Margin="0,15,0,15" Cursor="Hand"/>
                        <ToggleButton Style="{StaticResource SettingNavTBTN}" x:Name="btnSetting" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--//Titlebar//-->
                <Border CornerRadius="0,5,0,0" Background="#CC1B1B1B" BorderThickness="0,0,0,1" BorderBrush="#CC1F1F1F"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown" >
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource minimizeBTN}" Click="MinimizeButton_Click" Cursor="Hand"/>
                            <Button Style="{StaticResource closeBTN}" Click="CloseButton_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Width="868" Height="506" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>